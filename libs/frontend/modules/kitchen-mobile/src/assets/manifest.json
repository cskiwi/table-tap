{
  "name": "TableTap Kitchen Mobile",
  "short_name": "Kitchen",
  "description": "Mobile-optimized kitchen management for TableTap restaurant system",
  "theme_color": "#ff6b35",
  "background_color": "#ffffff",
  "display": "standalone",
  "orientation": "portrait-primary",
  "scope": "/kitchen/",
  "start_url": "/kitchen/dashboard",
  "id": "tabletap-kitchen-mobile",
  "categories": ["food", "business", "productivity"],
  "lang": "en-US",
  "dir": "ltr",

